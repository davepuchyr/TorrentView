   "version": "0.2.0",
   "configurations": [
      {
         "name": "Next.js: debug",
         "type": "node",
         "request": "launch",
         "runtimeExecutable": "npm",
         "runtimeArgs": ["run", "dev"],
         "console": "integratedTerminal",
         "env": {
            "NODE_OPTIONS": "--inspect"
         }
      },
      {
         "name": "Attach to Chrome",
         "address": "localhost",
         "port": 9222,
         "url": "http://localhost:9002",
         "request": "attach",
         "type": "chrome",
         "webRoot": "${workspaceFolder}"
      }
   ]
}
